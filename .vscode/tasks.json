{
  "version": "2.0.0",
  "tasks": [
    {
      "taskName": "install",
      "command": "npm",
      "args": ["install"]
    },
    {
      "taskName": "build:dev",
      "group": "build",
      "command": "webpack"
    },
    {
      "taskName": "build:prod",
      "group": "build",
      "command": "webpack",
      "args": ["--env.production"]
    },
    {
      "taskName": "start",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "command": "webpack-dev-server",
      "args": ["--open"]
    }
  ]
}